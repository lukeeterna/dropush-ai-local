# ===================================
# Dropush AI Local - Environment Configuration
# ===================================
# IMPORTANTE: Copia questo file come .env e inserisci le tue credenziali
# Path base: /Volumes/mact7/DROPUSH_PROJECT/dropush-ai-local

# ===================================
# n8n Configuration
# ===================================
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here_min_12_chars
ENCRYPTION_KEY=your_32_character_encryption_key_here_exactly
WEBHOOK_URL=http://localhost:5678

# ===================================
# eBay API Configuration
# ===================================
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id
EBAY_SANDBOX=false
EBAY_SITE_ID=101  # Italy
EBAY_MARKETPLACE_ID=EBAY_IT

# ===================================
# Amazon SP-API Configuration
# ===================================
AMAZON_REFRESH_TOKEN=your_refresh_token
AMAZON_CLIENT_ID=your_client_id
AMAZON_CLIENT_SECRET=your_client_secret
AMAZON_ROLE_ARN=your_role_arn
AMAZON_MARKETPLACE_ID=APJ6JRA9NG5V4  # Italy
AMAZON_REGION=eu-west-1

# ===================================
# CJ Dropshipping API
# ===================================
CJ_API_KEY=your_cj_api_key
CJ_API_SECRET=your_cj_api_secret
CJ_BASE_URL=https://developers.cjdropshipping.com/api/v2

# ===================================
# Eprolo API
# ===================================
EPROLO_API_KEY=your_eprolo_key
EPROLO_USER_ID=your_eprolo_user_id
EPROLO_BASE_URL=https://api.eprolo.com/v2

# ===================================
# AI Configuration
# ===================================
OLLAMA_HOST=ollama:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=300

# ===================================
# Database
# ===================================
DB_PATH=/data/sqlite/dropush.db
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *

# ===================================
# Backup Configuration
# ===================================
BACKUP_RETENTION_DAYS=30
# Usa un path diverso dal T7 con il clone OS!
BACKUP_DESTINATION=/Volumes/HD_1TB/dropush-backups
GDRIVE_CLIENT_ID=optional_for_cloud_backup
GDRIVE_CLIENT_SECRET=optional_for_cloud_backup

# ===================================
# Monitoring & Alerts
# ===================================
ALERT_EMAIL=your_email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
ALERT_THRESHOLD_DISK_PERCENT=80
ALERT_THRESHOLD_MEMORY_PERCENT=90

# ===================================
# System Settings
# ===================================
TZ=Europe/Rome
LOG_LEVEL=info
NODE_ENV=production
PROJECT_PATH=/Volumes/mact7/DROPUSH_PROJECT/dropush-ai-local
